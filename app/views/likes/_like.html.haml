.likes-box
- if user_signed_in?
  - if prototype.like_by?(current_user.id)
    = button_to prototype_like_path(like, prototype), method: :delete, id: "like-button", class: "btn btn-default decrement-button", remote: true do
      = image_tag("icon_red_heart.svg")
      Like
      %span.num#like-sum #{prototype.likes_count}
  - else
    = button_to prototype_likes_path(prototype), id: "like-button", class: "btn btn-default decrement-button", remote: true do
      = image_tag("icon_heart.svg")
      Like
      %span.num#like-sum #{prototype.likes_count}
- else
  %button.btn.btn-default
    = image_tag("icon_heart.svg")
    Like
    %span.num#like-sum #{prototype.likes_count}

