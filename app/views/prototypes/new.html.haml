.container.proto-new
  = form_for @prototype do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, type: "text", placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :prototype_images do |prototype_images_form|
              = prototype_images_form.file_field :content, type: "file"
        .col-md-12
          %ul.proto-sub-list.list-group
            %li.list-group-item.col-md-4
              .image-upload
                %input{type: "file"}/
            %li.list-group-item.col-md-4
              .image-upload
                %input{type: "file"}/
            %li.list-group-item.col-md-4
              .image-upload-plus
                %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, type: "text", placeholder: "Catch Copy"
        .col-md-12
          = f.text_field :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{type: "text", placeholder: "Web Design"}/
            .col-md-3
              %input{type: "text", placeholder: "UI"}/
            .col-md-3
              %input{type: "text", placeholder: "Application"}/
      .row.text-center.proto-btn
        %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Publish
