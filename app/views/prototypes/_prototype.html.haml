.col-sm-4.col-md-3.proto-content
  - if user_signed_in? && current_user.id == prototype.user_id
    //login
    .dropdown.drop_menu_location
      %button.btn.btn-default-action.dropdown-toggle{"aria-expanded": "false", "data-toggle": "dropdown",id: "dropdownMenu", type: "button"}Action
      %ul.dropdown-menu{"aria-labelledby": "dropdownMenu1"}
        %li
          = link_to "Delete", prototype_path(prototype), method: "delete"
        %li
          = link_to "Edit", edit_prototype_path(prototype), method: "get" 
  .thumbnail
    = link_to image_tag(prototype.prototype_images.main[0].content.url), prototype_path(prototype)
    .caption
      %h3
      = prototype.title
      .proto-meta
        .proto-user
          = prototype.user.name
        .proto-posted
          = prototype.created_at.strftime("%m月%d日")
    %ul.proto-tag-list.list-inline
      %li
        %a{href: "#", class: "btn btn-default"} iPad
      %li
        %a{href: "#", class: "btn btn-default"} wireframe
