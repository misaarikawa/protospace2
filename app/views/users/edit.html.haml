.container.user-new 
  = form_for current_user do |f| 
    - if current_user.errors.any?
      #error_explanation
        %h2
          = current_user.errors.count
          件のエラーがあります。
        %ul
          - current_user.errors.full_messages.each do |msg|
            %li= msg
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, type: "text", placeholder: "Username"
            .user-image.col-md-2
              %button.btn.btn-primary Change image
              = f.file_field :image, type: "file"
              = f.hidden_field :image_cache
          = f.text_field :email, type: "email", placeholder: "E-Mail", class: "user-email"
          = f.password_field :password, type: "password", placeholder: "password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              =f.text_field :member_of, type: "text", placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_field :profile, cols: "30", rows: "4", placeholder: "Profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_field :works, cols: "30", rows: "4", placeholder: "Works"
      .row.text-center.user-btn
        = f.submit "Save", class: "btn btn-lg btn-primary btn-block"
