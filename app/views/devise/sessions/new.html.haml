.container
  = form_for(resource,as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f|
    = devise_error_messages!
    %h2.form-signin-heading Please sign in
    .field
    = f.email_field :email, autofocus: "autofocus", placeholder: "Email address", type: "email", value: ""
    .field
    = f.password_field :password, autocomplete: "off", placeholder: "Password", type: "password"
    .checkbox
      %label
        %input{name: "user[remember_me]", type: "hidden", value: "0"}/
        %input#user_remember_me{name: "user[remember_me]", type: "checkbox", value: "1"}/
        Remember me
    .actions
      =f.submit "Sign in", name: "commit", class: "btn btn-lg btn-primary btn-block" 
  .text-center
    %p
      Not a member?
      =link_to "Sign up now", new_user_registration_path, target: "_self"
